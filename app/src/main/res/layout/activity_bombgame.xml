<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:visibility="visible">


    <ImageView
        android:id="@+id/bombimage"
        android:layout_width="259dp"
        android:layout_height="369dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="46dp"
        android:scaleType="fitXY"
        android:src="@drawable/digitbomb"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gametext" />

    <ImageView
        android:id="@+id/backbutton_1"
        android:layout_width="88dp"
        android:layout_height="59dp"
        android:src="@drawable/backbuttonimage"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gametext"
        android:layout_width="395dp"
        android:layout_height="62dp"
        android:layout_marginBottom="17dp"
        android:fontFamily="@font/bmjua_ttf"
        android:text="폭탄을 건드려주세요"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="52sp"
        app:layout_constraintBottom_toTopOf="@+id/bombimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backbutton_1" />

    <ImageView
        android:id="@+id/bombingimage"
        android:layout_width="398dp"
        android:layout_height="417dp"
        android:src="@drawable/digitbombing"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/gametext"
        app:layout_constraintTop_toBottomOf="@+id/gametext" />

    <ImageView
        android:id="@+id/howtoplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/howtoplay1" />


</androidx.constraintlayout.widget.ConstraintLayout>
