<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".KingGame">


    <ImageView
        android:id="@+id/backbutton_1"
        android:layout_width="88dp"
        android:layout_height="59dp"
        android:src="@drawable/backbuttonimage"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView16"
        android:layout_width="277dp"
        android:layout_height="130dp"
        android:layout_marginTop="640dp"
        android:fontFamily="@font/bmjua_ttf"
        android:gravity="center_horizontal"
        android:text="게임시작"
        android:textColor="#4CAF50"
        android:textSize="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="246dp"
        android:layout_height="90dp"
        android:layout_marginTop="304dp"
        android:fontFamily="@font/bmjua_ttf"
        android:gravity="center_horizontal"
        android:text="인원수"
        android:textColor="#4CAF50"
        android:textSize="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="322dp"
        android:layout_height="119dp"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/bmjua_ttf"
        android:gravity="center_horizontal"
        android:text="왕 게임"
        android:textColor="#FFFFFF"
        android:textSize="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/playertext"
        android:layout_width="87dp"
        android:layout_height="116dp"
        android:layout_marginTop="436dp"
        android:fontFamily="@font/bmjua_ttf"
        android:text="3"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="120sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/playerminus"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toStartOf="@+id/playertext"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:srcCompat="@drawable/minusimage" />

    <ImageView
        android:id="@+id/playerplus"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toEndOf="@+id/playertext"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:srcCompat="@drawable/plusimage" />

    <ImageView
        android:id="@+id/howtoplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/howtoplay11" />


</androidx.constraintlayout.widget.ConstraintLayout>
