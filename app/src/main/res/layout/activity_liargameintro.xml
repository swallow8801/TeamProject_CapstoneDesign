<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".liargameintro">


    <ImageView
        android:id="@+id/backbutton_1"
        android:layout_width="88dp"
        android:layout_height="59dp"
        android:src="@drawable/backbuttonimage"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/editTheme"
        android:layout_width="268dp"
        android:layout_height="81dp"
        android:layout_marginTop="188dp"
        android:fontFamily="@font/bmjua_ttf"
        android:inputType="text"
        android:textSize='40dp'
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editWord"
        android:layout_width="228dp"
        android:layout_height="74dp"
        android:layout_marginTop="284dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/bmjua_ttf"
        android:inputType="text"
        android:textSize='40dp'
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="137dp"
        android:layout_height="81dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="188dp"
        android:fontFamily="@font/bmjua_ttf"
        android:text="주제 :"
        android:textColor="#4CAF50"
        android:textSize="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="195dp"
        android:layout_height="88dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="640dp"
        android:fontFamily="@font/bmjua_ttf"
        android:text="게임시작"
        android:textColor="#4CAF50"
        android:textSize="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="177dp"
        android:layout_height="88dp"
        android:layout_marginTop="280dp"
        android:fontFamily="@font/bmjua_ttf"
        android:text="주제어 :"
        android:textColor="#4CAF50"
        android:textSize="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="177dp"
        android:layout_height="88dp"
        android:layout_marginTop="380dp"
        android:fontFamily="@font/bmjua_ttf"
        android:text="인원수 :"
        android:textColor="#4CAF50"
        android:textSize="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="177dp"
        android:layout_height="88dp"
        android:layout_marginTop="480dp"
        android:fontFamily="@font/bmjua_ttf"
        android:text="라이어 :"
        android:textColor="#4CAF50"
        android:textSize="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/playerminus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="384dp"
        android:layout_marginEnd="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/minusimage" />

    <ImageView
        android:id="@+id/liarminus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/minusimage" />

    <ImageView
        android:id="@+id/liarplus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/plusimage" />

    <ImageView
        android:id="@+id/playerplus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="384dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/plusimage" />

    <TextView
        android:id="@+id/liartext"
        android:layout_width="74dp"
        android:layout_height="68dp"
        android:layout_marginTop="472dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/bmjua_ttf"
        android:text="1"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/playertext"
        android:layout_width="74dp"
        android:layout_height="68dp"
        android:layout_marginTop="376dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/bmjua_ttf"
        android:text="3"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/howtoplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/howtoplay2" />


</androidx.constraintlayout.widget.ConstraintLayout>
